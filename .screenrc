# start as login shell
shell -${SHELL}

# disable visual bell
vbell off

# hide startup message
startup_message off

# auto detach on disconnect
autodetach on

# scrollback buffer
defscrollback 1000

#prevent full-screen programs like vim remaining in the scrollback buffer
altscreen on

# status line and caption
hardstatus alwayslastline
hardstatus string '%{Bk} %H%? %1`%? %{kG}%= %{= kG}%-w%{+b bk} %n*%t%?(%u)%? %{-}%+w %=%{G} %{Gk} %d/%m %{Bk} %0c '
caption string '%2n %t'
rendition so = kG

# create 2 more windows at startup
screen -t ~ 2
screen -t ~ 3

#Window numbering starts at 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# layouts
layout new a
select 1
layout new v1
select 1
split -v
resize -h 67%
focus right
select 2
focus left
layout new v2
select 1
split -v
resize -h 67%
focus right
select 2
split
focus down
select 3
focus left
layout new h1
select 1
split
resize -v 67%
focus down
select 2
focus up
layout new h2
select 1
split
resize -v 67%
focus down
select 2
split -v
focus right
select 3
focus up
layout select a

### key bindings

#change focus between splits
bind j focus down
bind k focus up
bind l focus right
bind h focus left
